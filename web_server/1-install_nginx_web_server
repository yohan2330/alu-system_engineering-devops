#!/bin/bash
# Install nginx web server and configure it to serve a page with "Holberton School"

# Update package lists
apt-get update -y

# Install nginx
apt-get install nginx -y

# Create a simple HTML page with required text
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure nginx is listening on port 80 (default configuration is fine)
# Create a basic nginx configuration
cat > /etc/nginx/sites-available/default << EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    root /var/www/html;
    index index.html;
    
    server_name _;
    
    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Test nginx configuration
nginx -t

# Reload nginx without using systemctl
service nginx reload
